/** AVVO REVIEWS **/
/* Top Border & Background Colors */
#content1 {
  background-color: #eeeeee;
  border-top: #09487d solid 14px;
  padding-top: 14px;
  font-family: 'Montserrat', sans-serif;
}

/* Avvo Star Style & Colors */
/* Avvo Active Stars */
#content1 .active:before {
  color: #fc9835;
  content: url(../img/embed/av_fstar.png);
  position: absolute;
}

/* Avvo Inactive Stars */
#content1 .rating > span {
  width: 21px;
  height: 21px;
  font-size: 18px;
  background-image: url(../img/embed/av_vstar.png);
  background-repeat: no-repeat;
  background-position: inherit;
  display: inline-block;
}

/** AVVO TYPOGRAPHY **/
/* Title */
#content1 a {
  color: #333333;
  font-size: 15px;
  font-weight: 600;
}

#content1 a:hover {
  color: #03a4cd;
}

/* Reveiwer */
p.avvo_uid {
  color: #333333;
  font-size: 14px;
  line-height: 3px;
  font-weight: 700;
  padding-top: 10px;
}

span.avvo_sm {
  color: #333333;
  font-size: 14px;
  font-weight: 300;
}

/* Date*/
p.avvo_date {
  color: #6e6e6e;
  font-size: 12px;
  font-weight: 400;
  margin-bottom: 12px;
  line-height: 5px;
}

/* Review Text */
.avvo_rev p {
  font-family: 'Montserrat', sans-serif;
  font-size: 14px;
  color: #333333;
  line-height: 20px;
  padding-top: 12px;
}

