html, body {
  padding: 0;
  margin: 0;
}

/* Container */
.reviews-container {
  width: 360px;
  background-color: black;
  margin: 0 auto;
  padding: 0;
}

/* Revued Heading */
.reviews-heading {
  padding: 15px 5px;
  text-align: center;
}

.reviews-heading h3 {
  color: #fff;
  font-size: 20px;
  font-weight: bold;
  margin: 0;
  font: 400 17px/1.3 Sans-Serif;
}

.circleBase {
  height: 30px;
  width: 30px;
  border-radius: 15px;
  behavior: url(css/PIE.htc);
  /* remove if you don't care about IE8 */
  display: inline-block;
}

.type2 {
  background: #1a1c1e;
  border: 3px solid #1a1c1e;
  padding: 3px;
}

.content {
  padding-top: 30px;
  position: relative;
}

*, *:before, *:after {
  box-sizing: border-box;
}

main {
  /*  min-width: 320px;
  padding: 50px;*/
  margin: 0 auto;
  max-width: auto;
  background: #000000;
}

.testimonial {
  margin: 15px 15px;
}

/* Floating Revued Box */
.reviews {
  /*width: 360px;*/
  height: 400px;
  z-index: 100;
  /*position: fixed;*/
  bottom: 0px;
  right: 0px;
  border-left: solid 2px #000000;
  border-right: solid 2px #000000;
  overflow-y: scroll;
  overflow-x: hidden;
}

.yelp-logo {
  float: left;
  margin-top: -6px;
}

.reviews #tab1, .reviews #tab2 {
  font-size: 15px;
}

.reviews section {
  display: none;
  padding: 20px 0 0;
  border-top: 1px solid #ddd;
  overflow: auto;
}

.reviews input {
  display: none;
}

.reviews label {
  display: inline-block;
  width: auto;
  margin-top: -4px;
  padding: 4px 8px;
  font-weight: 600;
  text-align: center;
  color: #bbb;
  font-size: 15px;
}

.reviews label:before {
  font-family: fontawesome;
  font-weight: normal;
  margin-right: 10px;
}

.reviews label:hover {
  color: #888;
  cursor: pointer;
}

.reviews input:checked + label {
  background-color: #ccc;
  width: 25%;
}

.reviews input#tab2:checked + label {
  background-color: #6d9ff6;
  width: 25%;
}

.reviews input#tab3:checked + label {
  background-color: #d32323;
  width: 25%;
}

.reviews input#tab4:checked + label {
  background-color: #3b5998;
  width: auto;
}

#tab1:checked ~ #content1, #tab2:checked ~ #content2, #tab3:checked ~ #content3, #tab4:checked ~ #content4 {
  display: block;
}

