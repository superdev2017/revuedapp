/* Reviewer Name & Photo */
.reviewer {
  margin-left: 25px;
  margin-bottom: 80px;
}

.reviewer .photo {
  background-color: #ccc;
  border-radius: 100px;
  width: 60px;
  height: 60px;
  float: left;
  margin-right: 10px;
}

.reviewer p {
  position: relative;
  top: 5px;
  text-transform: uppercase;
}

.reviewer p:nth-child(2) {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 0;
}

.reviewer p:nth-child(3) {
  font-size: 14px;
  color: #777;
}

/** Review Star Icon Styling - General **/
.rating {
  unicode-bidi: bidi-override;
  /*direction: rtl;*/
}

/* Default inactive star - Lt Grey */
.rating > span {
  width: 1.1em;
  font-size: 20px;
  color: transparent;
  position: relative;
}

.active {
  content: "\2605";
  /*background: red;*/
}

/* Default active star - Yellow */
.active:before {
  color: #FDE16D;
  content: '\2605';
  /* Full star in UTF8 */
  position: absolute;
}

.source-logo {
  padding-left: 0px;
  padding-bottom: 5px;
}

.star-text {
  font-size: 12px;
  color: #000000;
}

